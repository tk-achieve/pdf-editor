# Copy this file to .env and adjust values for local development.
# Never commit .env to source control.

# Port to expose on the host machine
HOST_PORT=8080

# ---------- Security ----------
# Set to true to enable Stirling PDF's built-in login UI (local dev only).
# In Azure, Entra ID Easy Auth handles authentication – leave this false.
DOCKER_ENABLE_SECURITY=false

# ---------- Localisation ----------
APP_LOCALE=en_GB
LANGS=en_GB

# ---------- Branding ----------
APP_HOME_NAME=Acme PDF Editor
APP_HOME_DESCRIPTION=Internal PDF editing tool – Acme Corp
APP_NAVBAR_NAME=PDF Editor

# ---------- Features ----------
INSTALL_BOOK_AND_ADVANCED_HTML_OPS=false
DISABLE_ADDITIONAL_FEATURES=true
